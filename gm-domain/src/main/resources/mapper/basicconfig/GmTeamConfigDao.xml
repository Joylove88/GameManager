<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gm.modules.basicconfig.dao.GmTeamConfigDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.gm.modules.basicconfig.entity.GmTeamConfigEntity" id="gmTeamConfigMap">
        <result property="id" column="ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="teamName" column="TEAM_NAME"/>
        <result property="teamSolt" column="TEAM_SOLT"/>
        <result property="hero1Id" column="HERO1_ID"/>
        <result property="hero2Id" column="HERO2_ID"/>
        <result property="hero3Id" column="HERO3_ID"/>
        <result property="hero4Id" column="HERO4_ID"/>
        <result property="hero5Id" column="HERO5_ID"/>
        <result property="status" column="STATUS"/>
        <result property="updateUser" column="UPDATE_USER"/>
        <result property="updateTime" column="UPDATE_TIME"/>
        <result property="updateTimeTs" column="UPDATE_TIME_TS"/>
    </resultMap>

    <select id="selectPage" resultType="com.gm.modules.basicconfig.entity.GmTeamConfigEntity">
        SELECT
            a.*, b.USER_WALLET_ADDRESS AS USER_ADDRESS
        FROM
            gm_team_config a
        LEFT JOIN gm_user b ON b.USER_ID = a.USER_ID
        ${ew.customSqlSegment}
    </select>

</mapper>