<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gm.modules.basicconfig.dao.GmMonsterConfigDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.gm.modules.basicconfig.entity.GmMonsterConfigEntity" id="gmMonsterConfigMap">
        <result property="id" column="ID"/>
        <result property="dungeonId" column="DUNGEON_ID"/>
        <result property="monsterName" column="MONSTER_NAME"/>
        <result property="monsterDescription" column="MONSTER_DESCRIPTION"/>
        <result property="monsterLevel" column="MONSTER_LEVEL"/>
        <result property="monsterPower" column="MONSTER_POWER"/>
        <result property="monsterImgUrl" column="MONSTER_IMG_URL"/>
        <result property="monsterIconUrl" column="MONSTER_ICON_URL"/>
        <result property="monsterHealth" column="MONSTER_HEALTH"/>
        <result property="monsterHealthRegen" column="MONSTER_HEALTH_REGEN"/>
        <result property="monsterArmor" column="MONSTER_ARMOR"/>
        <result property="monsterMagicResist" column="MONSTER_MAGIC_RESIST"/>
        <result property="monsterAttackDamage" column="MONSTER_ATTACK_DAMAGE"/>
        <result property="monsterAttackSpell" column="MONSTER_ATTACK_SPELL"/>
        <result property="monsterExp" column="MONSTER_EXP"/>
        <result property="status" column="STATUS"/>
        <result property="createUser" column="CREATE_USER"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="createTimeTs" column="CREATE_TIME_TS"/>
        <result property="updateUser" column="UPDATE_USER"/>
        <result property="updateTime" column="UPDATE_TIME"/>
        <result property="updateTimeTs" column="UPDATE_TIME_TS"/>
    </resultMap>

    <select id="selectPage" resultType="com.gm.modules.basicconfig.entity.GmMonsterConfigEntity">
        SELECT
            a.*, b.DUNGEON_NAME,b.DUNGEON_LEVEL_MIN,b.DUNGEON_LEVEL_MAX
        FROM
            gm_monster_config a
        LEFT JOIN gm_dungeon_config b ON b.ID = a.DUNGEON_ID

        ${ew.customSqlSegment}
    </select>

</mapper>