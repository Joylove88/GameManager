<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gm.modules.basicconfig.dao.EquipmentInfoDao">

    <select id="queryList" resultType="com.gm.modules.basicconfig.entity.EquipmentInfoEntity">
        SELECT EQUIP_ID,EQUIP_NAME,EQUIP_RARECODE
        FROM GM_EQUIPMENT_INFO
        <where>
            <if test="status != null and status != ''">
                AND STATUS = #{status}
                AND EQUIP_RARECODE in ('4','5')
            </if>
        </where>
    </select>

    <!--获取装备信息-->
    <select id="getEquipmentInfo" resultType="com.gm.modules.basicconfig.rsp.EquipmentInfoRsp">
        SELECT
        *
        FROM
        gm_equipment_info a
        <where>
            <if test="status != null and status != ''">
                AND a.STATUS = #{status}
            </if>
            <if test="equipRarecode != null and equipRarecode != ''">
                AND a.EQUIP_RARECODE = #{equipRarecode}
            </if>
        </where>
    </select>

</mapper>